extends ../shared/template

block content
  .verify-container
    h1 Complete Verification

    p. To complete you account verification, please enter a desired password.

    form(method='POST', action='/signup/complete/#{u._id}')
      .form-group
        input.verify-email-password.form-control(type='password', name='password', placeholder='i.e. "snickerdoodle5!"', autofocus=true)
        button.btn.btn-success Save
